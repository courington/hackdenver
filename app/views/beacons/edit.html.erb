
<%= form_for(@beacon) do |f| %>
	<button class="map">&larr; View Map</button>
    <div class="row">
      <span>Description</span>
    </div>
    <div class="row">
      <%= f.text_area :description, :placeholder => 'Where are you and what are you doing? ', :rows => "5" %>
    </div>

    <div class="row">
      <span>Duration</span>
      <%= f.select(:duration, options_for_select([['1 hour', '1'], ['2 hours', '2'], ['3 hours', '3'], ['4 hours', '4'], ['5 hours', '5'], ['6 hours', '6']])) %>
      <%= f.hidden_field :lat, value: params[:lat] %>
      <%= f.hidden_field :lng, value: params[:lng] %>
      <%= f.button 'Update Beacon', type: "submit" %>
      <%= f.button 'Delete', type: "submit" %>
    </div>
<% end %>
